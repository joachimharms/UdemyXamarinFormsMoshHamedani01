<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S02_L16_DealingWithDifferentDevices.GreetPage">
    <StackLayout BindingContext="{x:Reference slider}" HorizontalOptions="Center" VerticalOptions="Center">
        <BoxView Color="Green" Opacity="{Binding Value}"/>
        <Label Opacity="{Binding Value}" Text="{Binding Value, StringFormat='The Value is{0:F2}'}"/>
        <Slider x:Name="slider"/>

    </StackLayout>
</ContentPage>